<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is mainActivity!"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/activity_main_jump_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/purple_200"
        android:textColor="@color/black"
        android:text="jump to myActivity Or ThirdActivity"
        android:padding="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_image_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/teal_200"
            android:textColor="@color/black"
            android:text="Change Image from PNG to SVG"
            />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="#808080"
            android:src="@drawable/search_png"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>